        "**/__pycache__": true,
        "**/*.pyc": true
    },
    "python.defaultInterpreterPath": "/opt/venv/bin/python",
    "python.testing.pytestPath": "/opt/venv/bin/pytest",
    "python.testing.pytestArgs": [
        "/workspace/ros/src/vla_auto_recover",
        "/workspace/ros/src/vla_interfaces",
        "-v"
    ],
}